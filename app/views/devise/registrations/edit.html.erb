<div class="container background">
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
              <legend>Change Password<%#= resource_name.to_s.humanize %></legend>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class=>"form", :role=>"form"  }) do |f| %>
  <%= devise_error_messages! %>

  <label>Email</label>
  <%= text_field_tag :mail, current_user.email, :class=>"form-control", :placeholder=>"Your Email", :readonly => true %>
  <%= f.hidden_field :email, autofocus: true, :class=>"form-control", :placeholder=>"Your Email" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %><br/>

  <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off", :class=>"form-control", :placeholder=>"Current password" %><br/>

    <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>"New Password" %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control", :placeholder=>"Confirm Password" %><br/>
    
  <%= f.submit "Update", :class=>"btn btn-sm btn-success" %><br/>
<% end %>
</div>
</div>
</div>