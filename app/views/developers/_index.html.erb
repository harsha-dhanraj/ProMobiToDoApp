<% if @todos.empty? %>
  <p style="text-align: center;">
    <span style="color: red;font-size: 20px;">
      Currently, there are no pending tasks
    </span>
  </p>
<% else %>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th style="text-align: center;">Project</th>
        <th style="text-align: center;">Task</th>
        <th style="text-align: center;">Status</th>              
        <th colspan="3" style="text-align: center;">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @todos.each do |todo| %>
        <tr>
          <td style="text-align: center;"><%= todo.project.name %></td>
          <td style="text-align: center;"><%= todo.task %></td>
          <td style="text-align: center;"><%= todo.status %></td>                
          <td style="text-align: center;">
          	<!-- Single button -->
		<div class="btn-group">
		  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		    Change Status <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu">
        <% if todo.status == "In Progress" %>
		    <li><a href="<%= change_status_to_done_developer_path(todo) %>" data-remote="true">Done</a></li>
        <% elsif todo.status == "Done" %>
		    <li><a href="<%= change_status_to_in_progress_developer_path(todo) %>" data-remote="true">In Progress</a></li>
        <% else %>
        <li><a href="<%= change_status_to_done_developer_path(todo) %>" data-remote="true">Done</a></li>		
        <li><a href="<%= change_status_to_in_progress_developer_path(todo) %>" data-remote="true">In Progress</a></li>			    
        <% end %>
		  </ul>
		</div>                                
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>