<div class="developer-list">
  <div class="panel panel-default">
    <div class="panel-heading">
      Developers List
    </div>
    <div class="panel-body">
      <% if @developers.empty? %>
        <p style="text-align: center;">
          <span style="color: red;font-size: 20px;">
            Currently, there are no developers
          </span>
        </p>
      <% else %>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th style="text-align: center;">First Name</th>
              <th style="text-align: center;">Last name</th>
              <th style="text-align: center;">Email</th>
              <th colspan="3" style="text-align: center;">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @developers.each do |developer| %>
              <tr>
                <td><%= developer.first_name %></td>
                <td><%= developer.last_name %></td>
                <td><%= developer.email %></td>
                <td style="text-align: center;">
                <%= link_to "<i class='fa fa-pencil'></i> Edit".html_safe, edit_developer_project_manager_path(developer), :title => "Edit", :class=>"btn btn-primary btn-sm", :remote => true %>
                <%= link_to "<i class='fa fa-trash'></i> Delete".html_safe, delete_developer_project_manager_path(developer), method: :delete, data: { confirm: 'Are you sure?' }, :title => "Delete", :class=>"btn btn-danger btn-sm", :remote => true %>                
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>    
    </div>
  </div>
</div>


