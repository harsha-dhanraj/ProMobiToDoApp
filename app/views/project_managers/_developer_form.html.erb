<%= form_tag create_developer_project_managers_path, :remote => true, :method => "POST", :class => "form-horizontal", :id=>"add-edit-developer-form" do  %>
        <%= hidden_field_tag :id, (@developer.id rescue nil)  %>
        <div class="form-group">
          <label for="first_name" class="col-md-3 control-label">First Name</label>
          <div class="col-md-6">                                        
            <%= text_field_tag :first_name, params[:first_name] || (@developer.first_name rescue nil), autofocus: true, :class=>"form-control", :placeholder =>"First Name", :required => true %>
          </div>
        </div>
        <div class="form-group">
          <label for="last_name" class="col-md-3 control-label">Last Name</label>
          <div class="col-md-6">                                        
            <%= text_field_tag :last_name, params[:last_name] || (@developer.last_name rescue nil),  :class=>"form-control", :placeholder =>"Last Name", :required => true %>
          </div>
        </div>                                                
        <div class="form-group">
            <label for="email" class="col-md-3 control-label">Email</label>
            <div class="col-md-6">                                        
              <%= email_field_tag :email, params[:email] || (@developer.email rescue nil),  :class=>"form-control", :placeholder => "Email", :required => true %>
            </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-3 col-md-6">
            <%= submit_tag "#{@developer.nil? ? 'Save' : 'Update'}", :id=>"btn-signup", :class=>"btn btn-info" %>
          </div>
        </div>                                                              
      <% end %>