<!DOCTYPE html>
<html>
	<head>
	  <title>ProMobiToDoApp</title>
	  <%= stylesheet_link_tag    'admin', media: 'all' %>
	  <%= javascript_include_tag 'admin' %>	  
	  <%= csrf_meta_tags %>	  
	</head>
	<body>
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container-fluid">			
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="https://promobitech.com/" target="_blank">
						ProMobi Technologies Pvt.Ltd
					</a>
					<%= render partial: "shared/flash_messages", flash: flash %>
				</div>
							
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">		
					<ul class="nav navbar-nav navbar-right">						
						<li class="dropdown ">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
								<%= current_user.type %>
								<span class="caret"></span></a>
							<ul class="dropdown-menu" role="menu">
								<li class=""><a href="<%= edit_user_registration_path %>">Change Password</a></li>
								<li class="divider"></li>
								<li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
							</ul>
						</li>
					</ul>
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>
		<div class="container-fluid main-container">
			<div class="col-md-2 sidebar">
				<ul class="nav nav-pills nav-stacked">					
					<li class="<%= 'active' if (controller?('projects') && action?('index')) %>"><%= link_to "Project Status", projects_path  %></li>
					<li class="<%= 'active' if (controller?('projects') && (action?('new') || (action?('edit')))) %>"><%= link_to "Manage Projects", new_project_path,"data-no-turbolink" => true  %></li>
					<li class="<%= 'active' if (controller?('project_managers') && action?('add_developer')) %>""><a href="<%= add_developer_project_managers_path %>">Manage Developers</a></li>
					<li class="<%= 'active' if (controller?('projects') && action?('analytics')) %>"><a href="<%= analytics_projects_path %>">Analytics</a></li>					
				</ul>
			</div>
			<div class="col-md-10 content">				
				<%= yield %>	            
			</div>			
		</div>
	</body>
</html>